SCIP_SECRET_KEY=replace-with-strong-secret
SCIP_RATE_LIMIT=1000
DATABASE_URL=sqlite:///./scip.db
JWT_LEEWAY=120
REDIS_URL=

# Optional OIDC verification (use in production)
# OIDC_ISSUER=https://login.microsoftonline.com/{tenant}/v2.0
# OIDC_AUDIENCE=api://your-app-id
# OIDC_JWKS_PATH=/path/to/jwks.json

# Optional MongoDB for ingestion docs
# MONGODB_URL=mongodb://user:pass@localhost:27017
# MONGODB_DB=scip

# Optional Elasticsearch indexing
# ELASTICSEARCH_URL=http://localhost:9200

# Optional Octopart integration
# OCTOPART_API_KEY=your-octopart-api-key
# OCTOPART_ENDPOINT=https://api.octopart.com/v4/graphql
# OCTOPART_TIMEOUT_SECONDS=15
# OCTOPART_MAX_CONCURRENCY=5
# OCTOPART_CACHE_TTL_SECONDS=300
# OCTOPART_RATE_LIMIT_PER_MIN=600

# Auth posture
# SCIP_AUTH_MODE=mixed            # accepts Bearer or API key (default)
# SCIP_AUTH_MODE=bearer_only      # require Bearer JWT, disallow API keys (recommended in prod)
# SCIP_REQUIRE_OIDC=1             # require OIDC verification (RS256) when set; no HS256 fallback
# SCIP_ENV=production             # enables production warnings and defaults
