# Atlas AI Production Environment Configuration
# Copy to .env and customize for your deployment

# Application Settings
ATLAS_AI_ENV=production
PORT=8000
LOG_LEVEL=info

# Worker Configuration
ATLAS_WORKERS=4
TIMEOUT=120
KEEP_ALIVE=5
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=100

# Database Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=atlas_ai
POSTGRES_USER=atlas_user
POSTGRES_PASSWORD=change-this-secure-password

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_ENABLED=true

# JWT Configuration
JWT_SECRET_KEY=change-this-jwt-secret-key-to-something-very-secure
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# External APIs
OPENWEATHER_API_KEY=your-openweather-api-key

# Atlas Intelligence Integration
ATLAS_INTELLIGENCE_URL=https://loving-purpose-production.up.railway.app
ATLAS_INTELLIGENCE_TIMEOUT=30

# Security Settings
CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com
RATE_LIMIT_ENABLED=true

# SSL/TLS (for nginx)
NGINX_PORT=80
NGINX_SSL_PORT=443

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=change-this-grafana-password

# BankID Configuration (Sweden)
BANKID_TEST_MODE=false
BANKID_CLIENT_CERT_PATH=/app/ssl/bankid-client.crt
BANKID_CLIENT_KEY_PATH=/app/ssl/bankid-client.key
BANKID_CA_CERT_PATH=/app/ssl/bankid-ca.crt

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# Logging
LOG_FORMAT=json
LOG_ROTATION=true
LOG_MAX_SIZE=100MB
LOG_MAX_FILES=10